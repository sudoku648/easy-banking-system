{% extends 'base.html.twig' %}

{% block title %}Open Account - Existing Customer - Easy Banking System{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h2 class="mb-0">
                    <i class="bi bi-person-check"></i> Open Account - Existing Customer
                </h2>
            </div>
            <div class="card-body">
                <p class="text-muted">Open a new bank account for an existing customer.</p>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="mb-3">
                    <div class="form-group">
                        {{ form_label(form.customerId) }}
                        {{ form_widget(form.customerId, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.customerId) }}
                        <small class="form-text text-muted">Select the customer who wants to open a new account</small>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-group">
                        {{ form_label(form.currency) }}
                        {{ form_widget(form.currency, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.currency) }}
                        <small class="form-text text-muted">Select the currency for the new bank account</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('employee_dashboard') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Open Account
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
