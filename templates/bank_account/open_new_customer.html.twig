{% extends 'base.html.twig' %}

{% block title %}Open Account - New Customer - Easy Banking System{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    <i class="bi bi-person-plus"></i> Open Account - New Customer
                </h2>
            </div>
            <div class="card-body">
                <p class="text-muted">Create a new customer and open their first bank account.</p>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.username) }}
                            <small class="form-text text-muted">Customer will use this to login</small>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                            <small class="form-text text-muted">Minimum 6 characters</small>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-group">
                        {{ form_label(form.currency) }}
                        {{ form_widget(form.currency, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.currency) }}
                        <small class="form-text text-muted">Select the currency for the bank account</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('employee_dashboard') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Customer & Open Account
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
