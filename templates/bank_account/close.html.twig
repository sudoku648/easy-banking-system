{% extends 'base.html.twig' %}

{% block title %}Close Bank Account - Easy Banking System{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">
                    <i class="bi bi-x-circle"></i> Close Bank Account
                </h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> Closing a bank account will automatically withdraw all remaining funds. This action cannot be undone.
                </div>

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="mb-3">
                    <div class="form-group">
                        {{ form_label(form.bankAccountId) }}
                        {{ form_widget(form.bankAccountId, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.bankAccountId) }}
                        <small class="form-text text-muted">Select the bank account to close. The IBAN and current balance are shown.</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('employee_dashboard') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Close Account
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
