{% extends 'base.html.twig' %}

{% block title %}Deposit Money{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Deposit Money</h1>

    {{ form_start(form) }}
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    {{ form_label(form.bankAccountId, 'Bank Account') }}
                    {{ form_widget(form.bankAccountId, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.bankAccountId) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.amount, 'Amount') }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.amount) }}
                    <div class="form-text">Enter the amount to deposit</div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="{{ path('employee_dashboard') }}" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Deposit</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
