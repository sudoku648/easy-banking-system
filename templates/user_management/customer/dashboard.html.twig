{% extends 'base.html.twig' %}

{% block title %}Customer Dashboard - Easy Banking System{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-speedometer2"></i> Customer Dashboard
        </h1>
        <p class="lead">Welcome, {{ app.user.user.fullName }}!</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-wallet2"></i> Your Bank Accounts
                </h3>
            </div>
            <div class="card-body">
                {% if accounts|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>IBAN</th>
                                    <th class="text-end">Balance</th>
                                    <th>Currency</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for account in accounts %}
                                    <tr>
                                        <td>
                                            <code>{{ account.iban }}</code>
                                        </td>
                                        <td class="text-end">
                                            <strong>{{ account.balance|number_format(2, '.', ',') }}</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">{{ account.currency }}</span>
                                        </td>
                                        <td class="text-center">
                                            {% if account.isActive %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-danger">Closed</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            {% if account.isActive %}
                                                <a href="{{ path('transaction_transfer', {fromAccountId: account.id}) }}" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-arrow-left-right"></i> Transfer
                                                </a>
                                            {% else %}
                                                <button class="btn btn-sm btn-secondary" disabled>
                                                    Account Closed
                                                </button>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        You don't have any bank accounts yet. Please contact a bank employee to open an account.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-arrow-left-right display-4 text-primary mb-3"></i>
                <h5 class="card-title">Make a Transfer</h5>
                <p class="card-text">Send money to another account</p>
                <a href="{{ path('transaction_transfer') }}" class="btn btn-primary">
                    <i class="bi bi-arrow-left-right"></i> Transfer Money
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-clock-history display-4 text-info mb-3"></i>
                <h5 class="card-title">Transaction History</h5>
                <p class="card-text">View your transaction history</p>
                <a href="{{ path('transaction_history') }}" class="btn btn-info">
                    <i class="bi bi-clock-history"></i> View History
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
